<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.달려달력.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.달려달력.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_appWidget_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_weight="4"
            android:textSize="20dp"
            tools:text="2021-03-01" />

        <ImageView
            android:id="@+id/iv_appWidget_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:contentDescription="@string/widget_refresh"
            android:padding="8dp"
            android:src="@drawable/ic_refresh" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_appWidget_scheduleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
